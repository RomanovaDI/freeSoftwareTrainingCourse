FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale   1.0;

H       1;
L       10;
B       1;
nB      1;
nH      1;
nL      10;

vertices
(
    (0  0  0) // 0
    ($L 0  0) // 1
    ($L $H 0) // 2
    (0  $H 0) // 3
    (0  0  $B) // 4
    ($L 0  $B) // 5
    ($L $H $B) // 6
    (0  $H $B) // 7
);

blocks
(
    hex (0 1 2 3 4 5 6 7) ($nL $nH $nB) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    inlet
    {
        type patch;
        faces
        (
            (0 4 7 3)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (1 2 6 5)
        );
    }
	sides
    {
        type empty;
        faces
        (
            (0 1 5 4)
			(4 5 6 7)
			(3 7 6 2)
			(0 3 2 1)
        );
    }
);

mergePatchPairs
(
);


